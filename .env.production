# Production Environment Configuration
# Copy this file to .env in your cloud provider's environment variables

# Database Configuration (Railway/Cloud will provide this)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Environment
NODE_ENV=production

# Server Configuration
PORT=3003

# CORS Configuration (Set to your domain for security)
CORS_ORIGIN=https://your-app-domain.railway.app

# Railway specific (these will be auto-set by Railway)
RAILWAY_STATIC_URL=
RAILWAY_PUBLIC_DOMAIN=

# PWA Configuration
PWA_APP_NAME=SleepyCarla - Baby Sleep Tracker
PWA_SHORT_NAME=SleepyCarla
PWA_DESCRIPTION=Track your baby's sleep patterns and get nap recommendations

# Security Settings (optional)
SECURE_COOKIES=true
TRUST_PROXY=true
